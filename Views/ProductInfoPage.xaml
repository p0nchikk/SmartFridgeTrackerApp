<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartFridgeTracker.Views.ProductInfoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ProductInfoPage">
    <Grid Style="{StaticResource ThreeRowGridContainerStyle}">
        <Grid Style="{StaticResource ThreeColumnGridContainerStyle}">
            <ImageButton Source="back_arrow.png" Style="{StaticResource ImageButtonStyle}" Command="{Binding GoBackCommand}" />
            <Label Grid.Column="1" Style="{StaticResource HeaderLabelStyle}" Text="Product Info" />
            <ImageButton Grid.Column="2" Source="menu.png" Style="{StaticResource ImageButtonStyle}"/>
        </Grid>
        <VerticalStackLayout Grid.Row="1">
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>