<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartFridgeTracker.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MainPage"
    BackgroundColor="White">

    <Grid Padding="10" RowDefinitions="Auto, *, Auto">

        <!--  Upper Block  -->
        <Grid
            Padding="10"
            ColumnDefinitions="Auto, *, Auto"
            Row="0"
            RowDefinitions="Auto"
            VerticalOptions="Center">
            <!--  Profile  -->
            <ImageButton
                Aspect="AspectFill"
                BackgroundColor="Transparent"
                Command="{Binding ProfileImageTappedCommand}"
                HeightRequest="40"
                Source="profile_placeholder.png"
                WidthRequest="40" />

            <!--  Name  -->
            <Label
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="My Fridge"
                TextColor="Green"
                VerticalOptions="Center" />

            <!--  Menu  -->
            <Button
                Grid.Column="2"
                BackgroundColor="Transparent"
                HeightRequest="40"
                HorizontalOptions="End"
                ImageSource="menu.png"
                WidthRequest="40" />
        </Grid>

        <!--  Product List  -->
        <CollectionView
            Grid.Row="1"
            Margin="0,10,0,10"
            ItemsSource="{Binding Products}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Padding="10"
                        ColumnDefinitions="60,*,60, 60"
                        VerticalOptions="Center">
                        <!--  Product Image  -->

                        <Image
                            Aspect="AspectFill"
                            HeightRequest="60"
                            HorizontalOptions="Start"
                            Source="{Binding Image}"
                            VerticalOptions="Center"
                            WidthRequest="60" />

                        <!--  Product Name  -->
                        <Label
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            FontSize="22"
                            HorizontalOptions="Start"
                            Text="{Binding Name}"
                            TextColor="Black"
                            VerticalOptions="Center" />

                        <!--  Warning Sign  -->
                        <Image
                            Grid.Column="2"
                            Aspect="AspectFill"
                            HeightRequest="25"
                            HorizontalOptions="End"
                            Source="{Binding StateIcon}"
                            VerticalOptions="Center"
                            WidthRequest="25" />

                        <!--  Quantity  -->
                        <Label
                            Grid.Column="3"
                            FontSize="22"
                            HorizontalOptions="End"
                            Text="{Binding Quantity}"
                            TextColor="Black"
                            VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--  Button ADD  -->
        <Button
            Grid.Row="2"
            BackgroundColor="Tomato"
            CornerRadius="25"
            FontAttributes="Bold"
            HeightRequest="50"
            HorizontalOptions="FillAndExpand"
            Text="ADD"
            TextColor="White" />

    </Grid>

</ContentPage>