<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartFridgeTracker.Views.MyProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25" BackgroundColor="#e8faed">

            <!--  Header  -->
            <Grid Padding="10,0" ColumnDefinitions="Auto,*">
                
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="28"
                    HorizontalOptions="CenterAndExpand"
                    Text="My Profile"
                    VerticalOptions="Center" />
            </Grid>

            <!--  Identity Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="{StaticResource Primary}"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="auto,*,auto"  ColumnSpacing="10" RowSpacing="10">
                        <Image                      
                            HeightRequest="60"
                            Source="profile_placeholder.png"
                            WidthRequest="60"
                            HorizontalOptions="Start"/>
                        <Grid Grid.Column="1" RowDefinitions="auto,auto,auto" HorizontalOptions="Start" HeightRequest="60">
                            <Label Text="Username" FontSize="20" TextColor="#333"/>
                            <Label Text="Email" Grid.Row="1" FontSize="13" TextColor="DarkGray"/>
                            <Label Text="Registration date" Grid.Row="2" FontSize="13" TextColor="DarkGray"/>
                        </Grid>
                        <Button
                            Grid.Column="2"
                            BackgroundColor="Transparent"
                            Text="Edit"
                            HorizontalOptions="End"
                            TextColor="{StaticResource PrimaryDark}"/>
                    </Grid>
                    <BoxView HeightRequest="1" BackgroundColor="{StaticResource Primary}" Margin="0,20,0,20"/>

                    <!-- USER DETAILS SECTION -->
                    <Grid ColumnDefinitions="auto, auto" RowDefinitions="*,*">

                        <!-- FULL NAME -->
                        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" RowSpacing="5" ColumnSpacing="5">

                            <Frame BackgroundColor="{StaticResource Primary}" Grid.RowSpan="2"  HeightRequest="40" WidthRequest="40">
                                <Image Source="https://cdn-icons-png.flaticon.com/128/1077/1077063.png" />
                            </Frame>
                            
                            <Label Text="Full Name" 
                                   FontSize="15"
                                   Grid.Column="1"
                                   TextColor="DarkGray"/>
                            <Label Text="Polina" 
                                   FontSize="13"
                                   Grid.Column="1" 
                                   Grid.Row="1"
                                   TextColor="#333"/>
                        </Grid>
                             <!-- JOIN DATE -->
                        <Grid Grid.Column="1" HorizontalOptions="End" ColumnDefinitions="*,*" RowDefinitions="*,*" RowSpacing="5" ColumnSpacing="5">

                            <Frame BackgroundColor="{StaticResource Secondary}" Grid.RowSpan="2"  HeightRequest="40" WidthRequest="40">
                                <Image Source="https://cdn-icons-png.flaticon.com/128/2838/2838779.png" />
                            </Frame>

                            <Label Text="Join Date" 
                                   FontSize="15"
                                   Grid.Column="1"
                                   TextColor="DarkGray"/>
                            <Label Text="15/05/2025" 
                                   FontSize="13"
                                   Grid.Column="1" 
                                   Grid.Row="1"
                                   TextColor="#333"/>
                        </Grid>
                    </Grid>
                </VerticalStackLayout>

                <!--<VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Account" />
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto">
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Username:" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding Username}" />

                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Email:" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding Email}" />

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Registration Date:" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding RegDate, StringFormat='{0:dd MMM yyyy}'}" />
                    </Grid>
                </VerticalStackLayout>-->
            </Frame>

            <!--  Fridge Summary Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="Gray"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Fridge Summary" />
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Fridge Name:" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding FridgeName}" />

                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Product Count:" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding ProductCount}" />

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Expiring Soon:" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding ExpiringSoonCount}" />

                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Spoiled:" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="1"
                            Text="{Binding SpoiledCount}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Activity Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="Gray"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Activity &amp; Insights" />
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto">
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Last Updated:" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding LastUpdated, StringFormat='{0:dd MMM yyyy HH:mm}'}" />

                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Weekly Usage:" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding WeeklyUsage}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Actions  -->
            <HorizontalStackLayout Spacing="15">
                <Button
                    BackgroundColor="#6C63FF"
                    Command="{Binding EditProfileCommand}"
                    CornerRadius="25"
                    HorizontalOptions="FillAndExpand"
                    Text="Edit Profile"
                    TextColor="White" />
                <Button
                    BackgroundColor="#FF4E4E"
                    Command="{Binding LogoutCommand}"
                    CornerRadius="25"
                    HorizontalOptions="FillAndExpand"
                    Text="Logout"
                    TextColor="White" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>