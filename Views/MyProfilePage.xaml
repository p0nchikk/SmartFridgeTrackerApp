<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartFridgeTracker.Views.MyProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25" BackgroundColor="{StaticResource Background}">

            <!--  Header  -->
            <Grid Padding="10,0" ColumnDefinitions="Auto,*">
                
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="28"
                    HorizontalOptions="CenterAndExpand"
                    Text="My Profile"
                    VerticalOptions="Center" />
            </Grid>

            <!--  Identity Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="{StaticResource Primary}"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="auto,*,auto"  ColumnSpacing="10" RowSpacing="10">
                        <!-- PROFILE IMAGE -->
                        <Image                      
                            HeightRequest="60"
                            Source="profile_placeholder.png"
                            WidthRequest="60"
                            HorizontalOptions="Start"/>
                        <!-- BASIC PROFILE INFO -->
                        <Grid Grid.Column="1" RowDefinitions="auto,auto,auto" HorizontalOptions="Start" HeightRequest="60">
                            <Label Text="Username" FontSize="20" TextColor="{StaticResource Gray600}"/>
                            <Label Text="Email" Grid.Row="1" FontSize="13" TextColor="{StaticResource Gray400}"/>
                            <Label Text="Registration date" Grid.Row="2" FontSize="13" TextColor="{StaticResource Gray400}"/>
                        </Grid>
                        <!-- BUTTON EDIT PROFILE -->
                        <Button
                            Grid.Column="2"
                            BackgroundColor="Transparent"
                            Text="Edit"
                            HorizontalOptions="End"
                            TextColor="{StaticResource PrimaryDark}"/>
                    </Grid>
                    <!-- HORIZONTAL LINE -->
                    <BoxView HeightRequest="1" BackgroundColor="{StaticResource Primary}" Margin="0,20,0,20"/>

                    <!-- USER DETAILS SECTION -->
                    <Grid ColumnDefinitions="auto, 100, auto" RowDefinitions="*,*">

                        <!-- FULL NAME -->
                        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" RowSpacing="5" ColumnSpacing="15" HeightRequest="50">

                            <Image Source="user_icon.png" HeightRequest="40" Grid.RowSpan="2"/>

                            <Label Text="Full Name" 
                                   FontSize="15"
                                   Grid.Column="1"
                                   TextColor="{StaticResource Gray400}"/>

                            <Label Text="Polina" 
                                       FontSize="13"
                                       Grid.Column="1" 
                                       Grid.Row="1"
                                       TextColor="{StaticResource Gray600}"/>
                        </Grid>
                        <!-- JOIN DATE -->
                        <Grid Grid.Row="1" ColumnDefinitions="*,*" RowDefinitions="*,*" RowSpacing="5" ColumnSpacing="15" HeightRequest="50">

                            <Image Source="calendar_icon.png" HeightRequest="40"  Grid.RowSpan="2"/>

                            <Label Text="Join Date" 
                                   FontSize="15"
                                   Grid.Column="1"
                                   TextColor="{StaticResource Gray400}"/>
                            <Label Text="15/05/2025" 
                                   FontSize="13"
                                   Grid.Column="1" 
                                   Grid.Row="1"
                                   TextColor="{StaticResource Gray600}"/>
                        </Grid>
                        <!-- EMAIL -->
                        <Grid Grid.Column="2" HorizontalOptions="Start" ColumnDefinitions="*,*" RowDefinitions="*,*" RowSpacing="5" ColumnSpacing="15" HeightRequest="50">

                            <Image Source="email_icon.png" HeightRequest="40"  Grid.RowSpan="2"/>

                            <Label Text="Email" 
                                   FontSize="15"
                                   Grid.Column="1"
                                   TextColor="{StaticResource Gray400}"/>
                            <Label Text="yourEmail@gmail.com" 
                                   FontSize="13"
                                   Grid.Column="1" 
                                   Grid.Row="1"
                                   TextColor="{StaticResource Gray600}"/>
                        </Grid>
                        <!-- FRIDGE NAME   -->
                        <Grid Grid.Column="2" Grid.Row="1" HorizontalOptions="Start" ColumnDefinitions="*,*" RowDefinitions="*,*" RowSpacing="5" ColumnSpacing="15" HeightRequest="50">

                            <Image Source="fridge_icon.png" HeightRequest="40"  Grid.RowSpan="2"/>

                            <Label Text="Fridge Name" 
                                    FontSize="15"
                                    Grid.Column="1"
                                    TextColor="{StaticResource Gray400}"/>
                            <Label Text="My Fridge" 
                                    FontSize="13"
                                    Grid.Column="1" 
                                    Grid.Row="1"
                                    TextColor="{StaticResource Gray600}"/>
                        </Grid>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Fridge Summary Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="Gray"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Fridge Summary" 
                        TextColor="{StaticResource Gray600}"/>
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <Label
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray400}"
                            Text="Fridge Name:" />
                        <Label
                            Grid.Column="1"
                            Text="{Binding FridgeName}"
                            TextColor="{StaticResource Gray600}"
                            />

                        <Label
                            Grid.Row="1"
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray400}"
                            Text="Product Count:" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                             TextColor="{StaticResource Gray600}"
                            Text="{Binding ProductCount}" />

                        <Label
                            Grid.Row="2"
                            FontAttributes="Bold"
                             TextColor="{StaticResource Gray400}"
                            Text="Expiring Soon:" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            TextColor="{StaticResource Gray600}"
                            Text="{Binding ExpiringSoonCount}" />

                        <Label
                            Grid.Row="3"
                            FontAttributes="Bold"
                             TextColor="{StaticResource Gray400}"
                            Text="Spoiled:" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="1"
                            TextColor="{StaticResource Gray600}"
                            Text="{Binding SpoiledCount}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Activity Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="Gray"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Activity &amp; Insights"
                        TextColor="{StaticResource Gray600}"/>
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto">
                        <Label
                            FontAttributes="Bold"
                            TextColor="{StaticResource Gray400}"
                            Text="Last Updated:" />
                        <Label
                            Grid.Column="1"
                            TextColor="{StaticResource Gray600}"
                            Text="{Binding LastUpdated, StringFormat='{0:dd MMM yyyy HH:mm}'}" />

                        <Label
                            Grid.Row="1"
                            FontAttributes="Bold"
                             TextColor="{StaticResource Gray400}"
                            Text="Weekly Usage:" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            TextColor="{StaticResource Gray600}"
                            Text="{Binding WeeklyUsage}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Actions  -->
                <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                    <Button
                          BackgroundColor="{StaticResource Primary}"
                          Command="{Binding EditProfileCommand}"
                          CornerRadius="25"
                          Text="Edit Profile"
                          TextColor="White" />
                    <Button
                        Grid.Column="1"
                          BackgroundColor="{StaticResource Secondary}"
                          Command="{Binding LogoutCommand}"
                          CornerRadius="25"
                          Text="Logout"
                          TextColor="White" />
                </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>