<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartFridgeTracker.Views.MyProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Style="{StaticResource VerticalContainerStyle}">

            <!--  Header  -->
            <Grid
                Margin="10"
                ColumnDefinitions="auto,*,auto"
                ColumnSpacing="20">
                <ImageButton
                    Command="{Binding GoBackCommand}"
                    Source="back_arrow.png"
                    Style="{StaticResource ImageButtonStyle}" />
                <Label
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    Style="{StaticResource HeaderLabelStyle}"
                    Text="My Profile" />
            </Grid>

            <!--  Identity Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="{StaticResource Primary}"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout>
                    <Grid
                        ColumnDefinitions="auto,*,auto"
                        ColumnSpacing="15"
                        RowDefinitions="*,*">
                        <!--  PROFILE IMAGE  -->
                        <Image
                            Grid.RowSpan="2"
                            HeightRequest="60"
                            HorizontalOptions="Start"
                            Source="profile_placeholder.png"
                            WidthRequest="60" />
                        <!--  BASIC PROFILE INFO  -->
                        <Label
                            Grid.Column="1"
                            FontSize="20"
                            Style="{StaticResource LabelPropertyStyle}"
                            Text="{Binding Username}" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            FontSize="13"
                            Text="{Binding Email}"
                            TextColor="{StaticResource Gray400}" />
                        <!--  BUTTON EDIT PROFILE  -->
                        <ImageButton
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            HorizontalOptions="End"
                            Source="edit_icon.png"
                            Style="{StaticResource ImageButtonStyle}" />
                    </Grid>
                    <!--  HORIZONTAL LINE  -->
                    <BoxView
                        Margin="0,20,0,20"
                        BackgroundColor="{StaticResource Primary}"
                        HeightRequest="1" />

                    <!--  USER DETAILS SECTION  -->
                    <Grid
                        ColumnDefinitions="auto, 100, auto"
                        RowDefinitions="*,*"
                        RowSpacing="10">

                        <!--  FULL NAME  -->
                        <Grid
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            RowDefinitions="*,*"
                            RowSpacing="5">

                            <Image
                                Grid.RowSpan="2"
                                Source="user_icon.png"
                                Style="{StaticResource ImageIconStyle}" />

                            <Label
                                Grid.Column="1"
                                Style="{StaticResource LabelPropertyStyle}"
                                Text="Full Name" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource LabelCharacteristicStyle}"
                                Text="Empty" />
                        </Grid>
                        <!--  JOIN DATE  -->
                        <Grid
                            Grid.Row="1"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            RowDefinitions="*,*"
                            RowSpacing="5">

                            <Image
                                Grid.RowSpan="2"
                                Source="calendar_icon.png"
                                Style="{StaticResource ImageIconStyle}" />

                            <Label
                                Grid.Column="1"
                                Style="{StaticResource LabelPropertyStyle}"
                                Text="Join Date" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource LabelCharacteristicStyle}"
                                Text="{Binding RegDate, StringFormat='{0:dd MMM yyyy HH:mm}'}" />
                        </Grid>
                        <!--  EMAIL  -->
                        <Grid
                            Grid.Column="2"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            RowDefinitions="*,*"
                            RowSpacing="5">

                            <Image
                                Grid.RowSpan="2"
                                Source="email_icon.png"
                                Style="{StaticResource ImageIconStyle}" />

                            <Label
                                Grid.Column="1"
                                Style="{StaticResource LabelPropertyStyle}"
                                Text="Email" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource LabelCharacteristicStyle}"
                                Text="{Binding Email}" />
                        </Grid>
                        <!--  FRIDGE NAME  -->
                        <Grid
                            Grid.Row="1"
                            Grid.Column="2"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            RowDefinitions="*,*"
                            RowSpacing="5">

                            <Image
                                Grid.RowSpan="2"
                                Source="fridge_icon.png"
                                Style="{StaticResource ImageIconStyle}" />

                            <Label
                                Grid.Column="1"
                                Style="{StaticResource LabelPropertyStyle}"
                                Text="Fridge Name" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource LabelCharacteristicStyle}"
                                Text="{Binding FridgeName}" />
                        </Grid>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Fridge Summary Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="Gray"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Fridge Summary"
                        TextColor="{StaticResource Gray600}" />
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <Label Style="{StaticResource LabelPropertyStyle}" Text="Fridge Name:" />
                        <Label
                            Grid.Column="1"
                            Style="{StaticResource LabelCharacteristicStyle}"
                            Text="{Binding FridgeName}" />
                        <Label
                            Grid.Row="1"
                            Style="{StaticResource LabelPropertyStyle}"
                            Text="Product Count:" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource LabelCharacteristicStyle}"
                            Text="{Binding ProductCount}" />

                        <Label
                            Grid.Row="2"
                            Style="{StaticResource LabelPropertyStyle}"
                            Text="Expiring Soon:" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource LabelCharacteristicStyle}"
                            Text="{Binding ExpiringSoonCount}" />

                        <Label
                            Grid.Row="3"
                            Style="{StaticResource LabelPropertyStyle}"
                            Text="Spoiled:" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="1"
                            Style="{StaticResource LabelCharacteristicStyle}"
                            Text="{Binding SpoiledCount}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Activity Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="Gray"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Style="{StaticResource LabelPropertyStyle}"
                        Text="Activity &amp; Insights" />
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto">
                        <Label Style="{StaticResource LabelPropertyStyle}" Text="Last Updated:" />
                        <Label
                            Grid.Column="1"
                            Style="{StaticResource LabelCharacteristicStyle}"
                            Text="{Binding LastUpdated, StringFormat='{0:dd MMM yyyy HH:mm}'}" />
                        <Label
                            Grid.Row="1"
                            Style="{StaticResource LabelPropertyStyle}"
                            Text="Weekly Usage:" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource LabelCharacteristicStyle}"
                            Text="{Binding WeeklyUsage}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Actions  -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                <Button
                    BackgroundColor="{StaticResource PrimaryDark}"
                    Command="{Binding EditProfileCommand}"
                    Style="{StaticResource ButtonStyle}"
                    Text="Edit Profile" />
                <Button
                    Grid.Column="1"
                    BackgroundColor="{StaticResource SecondaryBright}"
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource ButtonStyle}"
                    Text="Logout" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>