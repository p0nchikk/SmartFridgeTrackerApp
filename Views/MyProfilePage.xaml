<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartFridgeTracker.Views.MyProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout
            Padding="25"
            BackgroundColor="{StaticResource Background}"
            Spacing="25">

            <!--  Header  -->
            <Grid Padding="10,0" ColumnDefinitions="Auto,*">
                <Label
                    Grid.Column="1"
                    HorizontalOptions="CenterAndExpand"
                    Style="{StaticResource HeaderLabelStyle}"
                    Text="My Profile" />
            </Grid>

            <!--  Identity Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="{StaticResource Primary}"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout>
                    <Grid
                        ColumnDefinitions="auto,*,auto"
                        ColumnSpacing="10"
                        RowSpacing="10">
                        <!--  PROFILE IMAGE  -->
                        <Image
                            HeightRequest="60"
                            HorizontalOptions="Start"
                            Source="profile_placeholder.png"
                            WidthRequest="60" />
                        <!--  BASIC PROFILE INFO  -->
                        <Grid
                            Grid.Column="1"
                            HeightRequest="60"
                            HorizontalOptions="Start"
                            RowDefinitions="auto,auto,auto">
                            <Label
                                FontSize="20"
                                Text="{Binding Username}"
                                TextColor="{StaticResource Gray600}" />
                            <Label
                                Grid.Row="1"
                                FontSize="13"
                                Text="{Binding Email}"
                                TextColor="{StaticResource Gray400}" />
                        </Grid>
                        <!--  BUTTON EDIT PROFILE  -->
                        <Button
                            Grid.Column="2"
                            BackgroundColor="Transparent"
                            HorizontalOptions="End"
                            Text="Edit"
                            TextColor="{StaticResource PrimaryDark}" />
                    </Grid>
                    <!--  HORIZONTAL LINE  -->
                    <BoxView
                        Margin="0,20,0,20"
                        BackgroundColor="{StaticResource Primary}"
                        HeightRequest="1" />

                    <!--  USER DETAILS SECTION  -->
                    <Grid
                        ColumnDefinitions="auto, 100, auto"
                        RowDefinitions="*,*"
                        RowSpacing="10">

                        <!--  FULL NAME  -->
                        <Grid
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            RowDefinitions="*,*"
                            RowSpacing="5">

                            <Image
                                Grid.RowSpan="2"
                                HeightRequest="40"
                                Source="user_icon.png" />

                            <Label
                                Grid.Column="1"
                                FontSize="15"
                                Text="Full Name"
                                TextColor="{StaticResource Gray400}" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontSize="13"
                                Text="Empty"
                                TextColor="{StaticResource Gray600}" />
                        </Grid>
                        <!--  JOIN DATE  -->
                        <Grid
                            Grid.Row="1"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            RowDefinitions="*,*"
                            RowSpacing="5">

                            <Image
                                Grid.RowSpan="2"
                                HeightRequest="40"
                                Source="calendar_icon.png" />

                            <Label
                                Grid.Column="1"
                                FontSize="15"
                                Text="Join Date"
                                TextColor="{StaticResource Gray400}" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontSize="13"
                                Text="{Binding RegDate, StringFormat='{0:dd MMM yyyy HH:mm}'}"
                                TextColor="{StaticResource Gray600}" />
                        </Grid>
                        <!--  EMAIL  -->
                        <Grid
                            Grid.Column="2"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            RowDefinitions="*,*"
                            RowSpacing="5">

                            <Image
                                Grid.RowSpan="2"
                                HeightRequest="40"
                                Source="email_icon.png" />

                            <Label
                                Grid.Column="1"
                                FontSize="15"
                                Text="Email"
                                TextColor="{StaticResource Gray400}" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontSize="13"
                                Text="{Binding Email}"
                                TextColor="{StaticResource Gray600}" />
                        </Grid>
                        <!--  FRIDGE NAME  -->
                        <Grid
                            Grid.Row="1"
                            Grid.Column="2"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            RowDefinitions="*,*"
                            RowSpacing="5">

                            <Image
                                Grid.RowSpan="2"
                                HeightRequest="40"
                                Source="fridge_icon.png" />

                            <Label
                                Grid.Column="1"
                                FontSize="15"
                                Text="Fridge Name"
                                TextColor="{StaticResource Gray400}" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontSize="13"
                                Text="{Binding FridgeName}"
                                TextColor="{StaticResource Gray600}" />
                        </Grid>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Fridge Summary Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="Gray"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Fridge Summary"
                        TextColor="{StaticResource Gray600}" />
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <Label
                            FontAttributes="Bold"
                            Text="Fridge Name:"
                            TextColor="{StaticResource Gray400}" />
                        <Label
                            Grid.Column="1"
                            Text="{Binding FridgeName}"
                            TextColor="{StaticResource Gray600}" />

                        <Label
                            Grid.Row="1"
                            FontAttributes="Bold"
                            Text="Product Count:"
                            TextColor="{StaticResource Gray400}" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding ProductsCount}"
                            TextColor="{StaticResource Gray600}" />

                        <Label
                            Grid.Row="2"
                            FontAttributes="Bold"
                            Text="Expiring Soon:"
                            TextColor="{StaticResource Gray400}" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding ExpiringSoonCount}"
                            TextColor="{StaticResource Gray600}" />

                        <Label
                            Grid.Row="3"
                            FontAttributes="Bold"
                            Text="Spoiled:"
                            TextColor="{StaticResource Gray400}" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="1"
                            Text="{Binding SpoiledCount}"
                            TextColor="{StaticResource Gray600}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Activity Section  -->
            <Frame
                Padding="20"
                BackgroundColor="White"
                BorderColor="Gray"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Activity &amp; Insights"
                        TextColor="{StaticResource Gray600}" />
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto">
                        <Label
                            FontAttributes="Bold"
                            Text="Last Updated:"
                            TextColor="{StaticResource Gray400}" />
                        <Label
                            Grid.Column="1"
                            Text="{Binding LastUpdated, StringFormat='{0:dd MMM yyyy HH:mm}'}"
                            TextColor="{StaticResource Gray600}" />

                        <Label
                            Grid.Row="1"
                            FontAttributes="Bold"
                            Text="Weekly Usage:"
                            TextColor="{StaticResource Gray400}" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding WeeklyUsage}"
                            TextColor="{StaticResource Gray600}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Actions  -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                <Button
                    BackgroundColor="{StaticResource PrimaryDark}"
                    Command="{Binding EditProfileCommand}"
                    Style="{StaticResource ButtonStyle}"
                    Text="Edit Profile" />
                <Button
                    Grid.Column="1"
                    BackgroundColor="{StaticResource SecondaryBright}"
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource ButtonStyle}"
                    Text="Logout" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>