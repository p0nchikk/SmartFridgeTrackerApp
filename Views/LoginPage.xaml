<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartFridgeTracker.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login Page">
    <VerticalStackLayout StyleClass="Container">
        <Grid
            Padding="20"
            BackgroundColor="White"
            ColumnSpacing="10"
            RowDefinitions="auto,*,auto"
            RowSpacing="10" />

        <!--  HEADER  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Style="{StaticResource HeaderLabelStyle}"
            Text="Welcome to Login Page"
            VerticalOptions="Center" />

        <!--  MAIN CONTENT  -->
        <VerticalStackLayout
            Grid.Row="1"
            Margin="20"
            BackgroundColor="White"
            Spacing="15">

            <Frame
                Margin="10"
                Padding="10"
                BackgroundColor="White"
                CornerRadius="18"
                HasShadow="True">
                <Entry
                    Placeholder="Username"
                    StyleClass="EntryFields"
                    Text="{Binding Username}"
                    TextColor="Black" />
            </Frame>

            <Label
                x:Name="LblErrorName"
                FontSize="10"
                Text=""
                TextColor="Red" />

            <!--  PASSWORD  -->

            <Grid ColumnDefinitions="*,Auto">
                <Frame
                    Margin="10"
                    Padding="10"
                    BackgroundColor="White"
                    CornerRadius="18"
                    HasShadow="True">
                    <Entry
                        IsPassword="True"
                        Placeholder="Password"
                        StyleClass="EntryFields"
                        Text="{Binding Password}"
                        TextColor="Black" />
                </Frame>
                <Button
                    Grid.Column="1"
                    HeightRequest="50"
                    ImageSource="hide.png"
                    WidthRequest="50" />
            </Grid>

            <Label
                x:Name="LblErrorPassword"
                FontSize="10"
                Text=""
                TextColor="Red" />

            <!--  MESSAGE ( TEMP )  -->
            <Label
                FontSize="15"
                Text="{Binding Message}"
                TextColor="Red" />

        </VerticalStackLayout>

        <!--  FOOTER  -->

        <Grid
            x:Name="Footer"
            Grid.Row="2"
            RowDefinitions="*,*">

            <Button
                Command="{Binding LoginUser}"
                HorizontalOptions="Fill"
                Text="Login"
                VerticalOptions="Center" />

            <!--<Label
                Grid.Row="1"
                Padding="0,12,0,0"
                FontSize="14"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center">

                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Don't have an account?   " TextColor="Black" />
                        <Span
                            Text="Sign Up"
                            TextColor="Purple"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ButtonGoToRegister_Clicked" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>-->

            <Button
                Grid.Row="1"
                BackgroundColor="Transparent"
                Command="{Binding GoToRegister}"
                Text="Go To Register"
                TextColor="{StaticResource Secondary}" />

        </Grid>
    </VerticalStackLayout>
</ContentPage>