<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="SmartFridgeTracker.Resources.Styles.MyCustomStyle"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Vertical Container  -->
    <Style x:Key="VerticalContainerStyle" TargetType="VerticalStackLayout">
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="20"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
        <Setter Property="Spacing" Value="15" />
    </Style>

    <!--  3 Rows Grid Container  -->
    <Style x:Key="ThreeRowGridContainerStyle" TargetType="Grid">
        <Setter Property="RowDefinitions" Value="Auto,*,Auto" />
        <Setter Property="RowSpacing" Value="10" />
    </Style>

    <!--  Horizontal Line  -->
    <Style x:Key="HorizontalLineStyle" TargetType="BoxView">
        <Setter Property="Margin" Value="0,20,0,10" />
        <Setter Property="BackgroundColor" Value="{StaticResource Gray400}" />
        <Setter Property="HeightRequest" Value="2" />
    </Style>

    <!--  Header  -->
    <Style x:Key="HeaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="40" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!--  Subheader  -->
    <Style x:Key="SubheaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource Gray500}" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style x:Key="RegularLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="{StaticResource Gray600}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!--  Fridge Icon  -->
    <Style x:Key="FridgeIconStyle" TargetType="Image">
        <Setter Property="HeightRequest" Value="100" />
        <Setter Property="WidthRequest" Value="100" />
    </Style>

    <!--  Entry Frame  -->
    <Style x:Key="EntryFrameStyle" TargetType="Frame">
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
    </Style>

    <!--  Entry Field  -->
    <Style x:Key="EntryFieldsStyle" TargetType="Entry">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray900}" />
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
    </Style>

    <!--  Message  -->
    <Style x:Key="MessageStyleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource SecondaryBright}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!--  Button  -->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!--  Image Button  -->
    <Style x:Key="ImageButtonStyle" TargetType="ImageButton">
        <Setter Property="Aspect" Value="AspectFill" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="WidthRequest" Value="40" />
    </Style>

    <!--  Navigation Button  -->
    <Style x:Key="NavigationButtonStyle" TargetType="Label">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryBright}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!--  Product Image  -->
    <Style x:Key="ProductImageStyle" TargetType="Image">
        <Setter Property="Aspect" Value="AspectFill" />
        <Setter Property="WidthRequest" Value="60" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!--  Product Name  -->
    <Style x:Key="ProductNameStyle" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <!--  Product Quantity  -->
    <Style x:Key="ProductQuantityStyle" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <!--  Warning Sign  -->
    <Style x:Key="WarningSignStyle" TargetType="Image">
        <Setter Property="Aspect" Value="AspectFill" />
        <Setter Property="HeightRequest" Value="30" />
        <Setter Property="WidthRequest" Value="30" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

</ResourceDictionary>