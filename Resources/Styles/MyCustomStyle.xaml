<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFridgeTracker.Resources.Styles.MyCustomStyle">
    <!-- Header -->
    <Style x:Key="HeaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="40" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>
    <!--  Subheader  -->
    <Style x:Key="SubheaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource Gray500}" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <!--  Fridge Icon  -->
    <Style x:Key="FridgeIconStyle" TargetType="Image">
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="WidthRequest" Value="100"/>
    </Style>

    <!--  Entry Frame  -->
    <Style x:Key="EntryFrameStyle" TargetType="Frame">
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
    </Style>

    <!--  Entry Field  -->
    <Style x:Key="EntryFieldsStyle" TargetType="Entry">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray900}" />
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
    </Style>

    <!--  Message  -->
    <Style x:Key="MessageStyleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource SecondaryBright}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!--  Button  -->
    <Style x:Key="ButtonStyleStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!--  Image Button  -->
    <Style x:Key="ImageButtonStyle" TargetType="ImageButton">
        <Setter Property="Aspect" Value="AspectFill" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="WidthRequest" Value="40"/>
    </Style>

    <!--  Navigation Button  -->
    <Style x:Key="NavigationButtonStyle" TargetType="Label">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryBright}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

</ResourceDictionary>