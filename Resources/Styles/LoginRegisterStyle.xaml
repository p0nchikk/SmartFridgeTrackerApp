<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="SmartFridgeTracker.Resources.Styles.LoginRegisterStyle"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Page Container  -->
    <Style x:Key="ContainerStyle" TargetType="VerticalStackLayout">
        <Setter Property="Padding" Value="30,60,30,30" />
        <Setter Property="Spacing" Value="15" />
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
    </Style>

    <!--  Header  -->
    <Style x:Key="HeaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="40" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryDark}" />
        <!--  green  -->
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <!--  Subheader  -->
    <Style x:Key="SubheaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource Gray500}" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>
    
    <!--  Fridge Icon  -->
    <Style x:Key="FridgeIconStyle" TargetType="Image">
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="WidthRequest" Value="100"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <!--  Entry Frame  -->
    <Style x:Key="EntryFrameStyle" TargetType="Frame">
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
    </Style>

    <!--  Entry Field  -->
    <Style x:Key="EntryFieldsStyle" TargetType="Entry">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray900}" />
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
    </Style>

    <!--  State Message  -->
    <Style x:Key="MessageStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource SecondaryBright}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>


    <!--  Main Sign-In/Sign-Up Button  -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!--  Navigation Button  -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryBright}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

</ResourceDictionary>