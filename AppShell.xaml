<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartFridgeTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SmartFridgeTracker.Views"
    Title="SmartFridgeTracker"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent ContentTemplate="{DataTemplate views:StartPage}" Route="StartPage" />
    <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
    <ShellContent ContentTemplate="{DataTemplate views:RegisterPage}" Route="RegisterPage" />
    <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
    <ShellContent ContentTemplate="{DataTemplate views:MyProfilePage}" Route="MyProfilePage" />

</Shell>
