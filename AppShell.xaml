<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartFridgeTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SmartFridgeTracker.Views"
    Title="SmartFridgeTracker"
    Shell.FlyoutBehavior="Locked">

    <ShellContent  Title="My Profile" ContentTemplate="{DataTemplate views:MyProfilePage}" Route="MyProfilePage" />
    <ShellContent Title="Start Page" ContentTemplate="{DataTemplate views:StartPage}" Route="StartPage" />
    <ShellContent  Title="Login" ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
    <ShellContent  Title="Register" ContentTemplate="{DataTemplate views:RegisterPage}" Route="RegisterPage" />
    <ShellContent  Title="Main" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
    <ShellContent  Title="Scan Item" ContentTemplate="{DataTemplate views:ScanItemPage}" Route="ScanItemPage" />
    

</Shell>
