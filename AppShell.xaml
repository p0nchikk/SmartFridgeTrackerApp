<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartFridgeTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SmartFridgeTracker.Views"
    Title="SmartFridgeTracker"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Start Page"
        ContentTemplate="{DataTemplate views:StartPage}"
        Route="StartPage" 
        FlyoutItemIsVisible="False"/>
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" 
        FlyoutItemIsVisible="False"/>
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage" 
        FlyoutItemIsVisible="False"/>
    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage"
        FlyoutIcon="home_icon.png"/>
    <ShellContent
        Title="My Profile"
        ContentTemplate="{DataTemplate views:MyProfilePage}"
        Route="MyProfilePage" 
        FlyoutIcon="profile_placeholder.png"/>
    <ShellContent
        Title="Scan Item"
        ContentTemplate="{DataTemplate views:ScanItemPage}"
        Route="ScanItemPage"
        FlyoutItemIsVisible="False"/>
    <ShellContent
        Title="Product Info"
        ContentTemplate="{DataTemplate views:ProductInfoPage}"
        Route="ProductInfoPage" 
        FlyoutItemIsVisible="False"/>


</Shell>
